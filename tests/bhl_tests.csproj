  <PropertyGroup>
    <RootNamespace>bhl</RootNamespace>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <DefineConstants>BHL_FRONT</DefineConstants>
    <OutputPath>..\build\$(Configuration)\$(TargetFramework)\$(MSBuildProjectName)</OutputPath>
